<!DOCTYPE html>
<html>
<head><% include ../partials/head %>
    <script type="text/javascript">
        jQuery(function($) {
            $('#loginBtn').on('click', function(e) {
                var params ={
                    password: $("#password").val()
                };
                ajaxPost("/login",params,function (data) {
                    if(data.error){
                        alert(data.error);
                    }else{
                        if(data.goto){
                            location.href = data.goto;
                        }else{
                            alert(data.info);
                        }
                    }
                });
                e.preventDefault();
            });
        });
    </script>
</head>
<body class="light-login">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-random green"></i>
                                <span class="blue lighter bigger"><%= appinfo.name %></span>
                            </h1>
                        </div>
                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-lock green"></i>
                                            请输入密码
                                        </h4>
                                        <div class="space-6"></div>
                                        <form>
                                            <fieldset>
                                                <label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<input type="password" class="form-control" maxlength="15" placeholder="Password" id="password" value="admin"/>
															<span class="red">(初始密码:admin)</span><i class="ace-icon fa fa-lock"></i>
														</span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button id="loginBtn" type="button" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Login</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.position-relative -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
</body>
</html>